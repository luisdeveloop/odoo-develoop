<odoo>
	<data>
		<template id="report_invoice_document_custom" inherit_id="account.report_invoice_document">
		
			<xpath expr="//div[@class='page']//h2" position="replace">
				<h2 t-if="o.type == 'out_refund'">
					<span>Factura Rectificativa</span>
				</h2>
				<h2 t-if="o.type != 'out_refund'">
					<span>Factura</span>
				</h2>
			</xpath>
            
            <!-- <xpath expr="//div[@class='row mt32 mb32']" position="replace">
				<div id="informations" class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                            <strong>Fecha factura:</strong>
                            <p class="m-0" t-field="o.invoice_date"/>
                        </div>
                        <div name="reference" class="col-auto mw-100 mb-2">
                            <strong>Número Factura:</strong>
                            <p class="m-0" t-field="o.name"/>
                        </div>
                </div>
			</xpath>
			
			
			<xpath expr="//table[@class='table table-sm o_main_table']" position="replace">
				<table class="table table-sm o_main_table" name="invoice_line_table">
                        <thead>
                            <tr>
                                <t t-set="colspan" t-value="6"/>
                                <th class="text-left"><span>Descripción</span></th>
                                <th class="d-none text-left"><span>Source Document</span></th>
                                <th t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Dto.(%)</span>
                                    <t t-set="colspan" t-value="colspan+1"/>
                                </th>
                                <th class="text-right">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Total</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Precio total</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>

                            <t t-foreach="o.invoice_line_ids" t-as="line">

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td name="account_invoice_line_name"><span t-field="line.name"/></td>
                                        <td class="d-none"><span t-field="o.invoice_origin"/></td>
                                        <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or o.invoice_line_ids[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                </table>
			</xpath>
			

			<xpath expr="//t/t/div/p[1]" position="replace">
                <p t-if="o.team_id.name == 'Mantenimientos'">
					<strong>Esta factura cubre el siguiente periodo:</strong>
					<span t-field="o.invoice_date" t-options='{"format": "MM/yyyy"}'/>
                    <br/>
				</p>
            </xpath>
            
            <xpath expr="//p[@t-if='o.narration']" position="replace">
                <p t-if="o.team_id.name == 'ERP'">
					<strong>Notas:</strong>
                    <br/>
					<span t-field="o.narration"/>
                    <br/>
				</p>
                <p t-if="o.team_id.name == 'Software a medida'">
					<strong>Notas:</strong>
                    <br/>
					<span t-field="o.narration"/>
                    <br/>
				</p>
				<p t-if="o.team_id.name == 'SERVICIOS'">
					<strong>Notas:</strong>
                    <br/>
					<span t-field="o.narration"/>
                    <br/>
				</p>
            </xpath>
                    
            <xpath expr="//p[@t-if='o.invoice_payment_term_id']" position="replace">
				<p t-if="o.invoice_payment_term_id" name="payment_term">
                    <span style="color:white" t-field="o.invoice_payment_term_id.note"/>
                </p>
			</xpath>
                    
            <xpath expr="//p[@t-if='o.invoice_payment_term_id']" position="after">
				<p t-if="o.team_id.name == 'Mantenimientos'">
					<strong>Fecha vencimiento:</strong>
					<span t-field="o.date_due"/>
				</p>
			</xpath>
            
            <xpath expr="//p[@t-if='o.fiscal_position_id.note']" position="replace">
                <p t-if="o.team_id.name == 'Mantenimientos'">
					<strong>Forma de pago:</strong>
					<span t-field="o.invoice_payment_term_id"/>
				</p>
            </xpath>
			 -->
        </template>   
	</data>
</odoo>
        